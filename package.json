{
  "name": "@tswaters/react-form-validation",
  "version": "1.0.0",
  "description": "React form validation components",
  "browser": "dist/index.umd.js",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.mjs",
  "scripts": {
    "pre_build": "rimraf dist",
    "_build": "rollup -c",
    "build": "cross-env NODE_ENV=production npm run _build",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "precoverage": "rimraf coverage",
    "lint": "eslint src",
    "start": "npm run _build -- -w",
    "test": "nyc --reporter=text --reporter=html mocha"
  },
  "author": "Tyler Waters <tyler.waters@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tswaters/react-form-validation.git"
  },
  "peerDependencies": {
    "react": ">=16.8",
    "react-dom": ">=16.8",
    "prop-types": ">=15.6"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.4.4",
    "@babel/plugin-proposal-optional-chaining": "^7.6.0",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.6.3",
    "@babel/register": "^7.6.2",
    "babel-eslint": "^10.0.3",
    "bootstrap": "^4.3.1",
    "coveralls": "^3.0.7",
    "cross-env": "^6.0.3",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.6.0",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.2.0",
    "jsdom": "^15.2.1",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "prop-types": "^15.7.2",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "rimraf": "^3.0.0",
    "rollup": "^1.26.2",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-live-server": "^1.0.3",
    "rollup-plugin-terser": "^5.1.2",
    "sinon": "^7.5.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "exclude": [
            "@babel/plugin-transform-regenerator",
            "@babel/plugin-transform-async-to-generator"
          ]
        }
      ],
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-optional-chaining",
      "@babel/plugin-proposal-nullish-coalescing-operator"
    ]
  },
  "eslintConfig": {
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "overrides": [
      {
        "files": [
          "examples/**/*.js"
        ],
        "globals": {
          "Babel": true
        }
      },
      {
        "files": [
          "test/**/*.js"
        ],
        "env": {
          "node": true,
          "mocha": true
        }
      },
      {
        "files": [
          "src/**/*.js",
          "examples/**/*.js"
        ],
        "env": {
          "browser": true
        }
      },
      {
        "files": [
          "rollup.config.js",
          "test/setup.js"
        ],
        "env": {
          "node": true
        }
      }
    ],
    "env": {
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2019,
      "sourceType": "module"
    },
    "parser": "babel-eslint",
    "plugins": [
      "react",
      "react-hooks"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "no-unused-vars": "warn"
    }
  },
  "eslintIgnore": [
    "dist",
    "node_modules"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "mocha": {
    "spec": [
      "test/setup.js",
      "test/**/*.test.js"
    ]
  },
  "bugs": {
    "url": "https://github.com/tswaters/react-form-validation/issues"
  },
  "homepage": "https://github.com/tswaters/react-form-validation#readme",
  "directories": {
    "example": "examples",
    "test": "test"
  }
}
